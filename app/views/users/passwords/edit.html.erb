<div id="login-form">
  <h2>Change your password</h2>
  <div>
<ul class="form-header">
  </ul>
</div>

<div class="section-out">
<section class="login-section">
<div class="login">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
    <ul class="ul-list">
      <li><% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
          <%= f.password_field :password, autocomplete: "new-password",placeholder: "Enter new password", class: 'input' %><span class="icon"><i class="fa fa-lock"></i></span>
      </li>
      <li><%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "Re-enter new password", class: 'input' %><span class="icon"><i class="fa fa-lock"></i></span></li>
      <li><input type="submit" value="change my password" class="btn"></li>
    </ul>
  <% end %>

<%= render "users/shared/links" %>
</div>
</section>
</div>
